{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:go": "npm run build && cd .. && go generate ./frontend",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run format:check && npm run lint",
    "check:fix": "npm run format && npm run lint:fix",
    "typecheck": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "check:all": "npm run format:check && npm run lint && npm run lint:css && npm run typecheck",
    "lint:css": "stylelint 'src/**/*.{css,svelte}'",
    "lint:css:fix": "stylelint 'src/**/*.{css,svelte}' --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run --reporter=verbose --coverage.enabled=false",
    "depcheck": "npx depcheck --skip-missing",
    "commitlint": "npx commitlint --from HEAD~1 --to HEAD --verbose",
    "analyze:deps": "madge --extensions ts,js,svelte --summary src/",
    "analyze:circular": "madge --extensions ts,js,svelte --circular src/",
    "analyze:deps:json": "madge --extensions ts,js,svelte --json src/",
    "analyze:orphans": "madge --extensions ts,js,svelte --orphans src/",
    "analyze:duplicates": "jscpd src/",
    "analyze:duplicates:html": "jscpd --reporters html,console src/",
    "analyze:all": "npm run analyze:circular && npm run analyze:duplicates",
    "test:a11y": "vitest run --reporter=verbose -t \"Accessibility\"",
    "test:a11y:watch": "vitest -t \"Accessibility\"",
    "generate:i18n-types": "npx tsx src/lib/i18n/generateTypes.ts",
    "prepare": "husky install",
    "analyze:bundle": "npm run build && npx vite-bundle-analyzer dist",
    "analyze:bundle:size": "npm run build && npx bundlesize",
    "audit:security": "npm audit --audit-level=high",
    "audit:outdated": "npm outdated",
    "check:deps": "npx depcheck && npm run audit:security"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/charts.js",
      "maxSize": "75kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/index.js",
      "maxSize": "65kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/Settings.js",
      "maxSize": "45kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/index.css",
      "maxSize": "30kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/*.js",
      "maxSize": "25kb",
      "compression": "gzip"
    }
  ],
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.30.1",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.1.0",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "bundlesize": "^0.18.2",
    "eslint": "^9.30.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-svelte": "^3.10.1",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "madge": "^8.0.0",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "puppeteer": "^24.12.1",
    "stylelint": "^16.22.0",
    "stylelint-config-standard": "^38.0.0",
    "svelte": "^5.35.6",
    "svelte-check": "^4.2.2",
    "svelte-eslint-parser": "^1.2.0",
    "tailwindcss": "~3.4.17",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-bundle-analyzer": "^1.1.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "daisyui": "~4.12.24",
    "eventsource": "^4.0.0",
    "reconnecting-eventsource": "^1.6.4",
    "svelte-portal": "^2.2.1"
  }
}
